{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Build ABAP Assistant Plugin",
      "type": "shell",
      "command": "mvn",
      "args": ["clean", "compile", "dependency:copy-dependencies"],
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      },
      "problemMatcher": ["$java"],
      "options": {
        "cwd": "${workspaceFolder}"
      }
    }
  ]
}
